{
  "manifest_version": 3,
  "name": "Oomplify",
  "version": "1.0.0",
  "description": "Replaces AI terms on LinkedIn with Oompa-Loompas.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
